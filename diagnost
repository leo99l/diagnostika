        ];

        // Test state
        let currentQuestion = 0;
        let answers = [];
        let totalScore = 0;

        function startTest() {
            document.getElementById('landing').style.display = 'none';
            document.getElementById('loading').classList.add('show');
            
            setTimeout(() => {
                document.getElementById('loading').classList.remove('show');
                document.getElementById('test').style.display = 'block';
                showQuestion();
            }, 1500);
        }

        function showQuestion() {
            const question = questions[currentQuestion];
            document.getElementById('questionNumber').textContent = `Вопрос ${currentQuestion + 1} из ${questions.length}`;
            document.getElementById('questionTitle').textContent = question.title;
            
            const answersContainer = document.getElementById('answers');
            answersContainer.innerHTML = '';
            
            question.answers.forEach((answer, index) => {
                const answerDiv = document.createElement('div');
                answerDiv.className = 'answer';
                answerDiv.textContent = answer.text;
                answerDiv.onclick = () => selectAnswer(index, answerDiv);
                answersContainer.appendChild(answerDiv);
            });
            
            updateProgress();
            updateNavigation();
            document.getElementById('test').scrollTop = 0;
        }

        function selectAnswer(answerIndex, element) {
            document.querySelectorAll('.answer').forEach(el => el.classList.remove('selected'));
            element.classList.add('selected');
            
            answers[currentQuestion] = {
                questionIndex: currentQuestion,
                answerIndex: answerIndex,
                points: questions[currentQuestion].answers[answerIndex].points
            };
            
            updateNavigation();
            
            setTimeout(() => {
                if (answers[currentQuestion] && currentQuestion < questions.length - 1) {
                    nextQuestion();
                }
            }, 500);
        }

        function nextQuestion() {
            if (answers[currentQuestion]) {
                if (currentQuestion < questions.length - 1) {
                    currentQuestion++;
                    showQuestion();
                } else {
                    finishTest();
                }
            }
        }

        function prevQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                showQuestion();
                
                if (answers[currentQuestion]) {
                    const answerElements = document.querySelectorAll('.answer');
                    answerElements[answers[currentQuestion].answerIndex].classList.add('selected');
                }
            }
        }

        function updateProgress() {
            const progress = ((currentQuestion + 1) / questions.length) * 100;
            document.getElementById('progressFill').style.width = `${progress}%`;
        }

        function updateNavigation() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            prevBtn.disabled = currentQuestion === 0;
            nextBtn.disabled = !answers[currentQuestion];
            
            if (currentQuestion === questions.length - 1 && answers[currentQuestion]) {
                nextBtn.textContent = 'Получить результат';
            } else {
                nextBtn.textContent = 'Далее';
            }
        }

        function finishTest() {
            totalScore = answers.reduce((sum, answer) => sum + answer.points, 0);
            
            document.getElementById('test').style.display = 'none';
            document.getElementById('loading').classList.add('show');
            
            setTimeout(() => {
                document.getElementById('loading').classList.remove('show');
                document.getElementById('results').style.display = 'block';
                generateResults();
                document.getElementById('results').scrollTop = 0;
            }, 2000);
        }

        function generateResults() {
            const level = getLevelFromScore(totalScore);
            const resultsContainer = document.getElementById('resultsContent');
            
            resultsContainer.innerHTML = `
                <div class="level-badge">Твой уровень: ${level.badge}</div>
                <h1 class="level-title">${level.title}</h1>
                <p class="level-description">${level.description}</p>
                
                <div class="section">
                    <h2 class="section-title">🎯 Где ты сейчас</h2>
                    <div class="program-content">
                        ${level.currentState}
                    </div>
                </div>
                
                <div class="section">
                    <h2 class="section-title">🔓 Твои основные программы</h2>
                    ${level.programs.map(program => `
                        <div class="program">
                            <h3 class="program-title">${program.title}</h3>
                            <div class="program-content">
                                <h4>Откуда взялась:</h4>
                                <p>${program.origin}</p>
                                
                                <h4>Как проявляется сейчас:</h4>
                                <ul>
                                    ${program.manifestations.map(m => `<li>${m}</li>`).join('')}
                                </ul>
                                
                                <h4>ТЕХНИКА ОСВОБОЖДЕНИЯ: "${program.technique.title}"</h4>
                                <ol>
                                    ${program.technique.steps.map(step => `<li>${step}</li>`).join('')}
                                </ol>
                                
                                <h4>Аффирмации:</h4>
                                <ul>
                                    ${program.affirmations.map(aff => `<li>"${aff}"</li>`).join('')}
                                </ul>
                            </div>
                        </div>
                    `).join('')}
                </div>
                
                <div class="section">
                    <h2 class="section-title">📈 Твой план развития</h2>
                    <div class="program-content">
                        <h4>Ежедневные практики (${level.dailyTime}):</h4>
                        <ul>
                            ${level.dailyPractices.map(practice => `<li>${practice}</li>`).join('')}
                        </ul>
                        
                        <h4>Еженедельные упражнения:</h4>
                        <ul>
                            ${level.weeklyExercises.map(exercise => `<li>${exercise}</li>`).join('')}
                        </ul>
                        
                        <h4>Признаки роста:</h4>
                        <ul>
                            ${level.growthSigns.map(sign => `<li>✅ ${sign}</li>`).join('')}
                        </ul>
                    </div>
                </div>
                
                <div class="simple-cta">
                    <h3>🔥 Хочешь изменить все навсегда?</h3>
                    <p>Диагностика показала тебе <strong>ЧТО</strong> тебя блокирует.<br>
                    Но не показала <strong>КАК</strong> это изменить навсегда!</p>
                    
                    <p style="color: #f39c12; font-weight: 600; margin-bottom: 25px;">
                        Прокрути вниз и узнай правду о системе освобождения от программ →
                    </p>
                </div>
                
                <!-- ПРОДАЮЩАЯ СЕКЦИЯ БЕЗ ЗВЕЗДОЧЕК -->
                <div style="background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%); margin: 30px -20px 0 -20px; padding: 30px 20px; border-radius: 15px; color: white;">
                    
                    <div style="text-align: center; padding: 20px 0; border-bottom: 2px solid rgba(255,255,255,0.1); margin-bottom: 30px;">
                        <h2 style="font-size: 28px; font-weight: 700; color: #f39c12; margin-bottom: 15px;">🚨 СТОП! ТЫ ЖИВЕШЬ В МАТРИЦЕ СВОИХ ПРОГРАММ</h2>
                        <p style="font-size: 16px; opacity: 0.9; margin: 0;"><strong>И даже не подозреваешь об этом...</strong></p>
                    </div>

                    <p style="font-size: 15px; margin-bottom: 20px; line-height: 1.5;">Представь: ты просыпаешься каждое утро с тем же чувством тяжести в груди. Снова этот день. Снова эти люди. Снова эти проблемы, которые как заезженная пластинка крутятся в твоей голове.</p>
                    
                    <p style="font-size: 18px; font-weight: 600; margin-bottom: 15px; color: #f39c12;">Тебе кажется, что ты живешь свою жизнь?</p>
                    
                    <p style="font-size: 24px; font-weight: 700; text-align: center; margin-bottom: 20px; color: #e74c3c;">НЕПРАВДА.</p>

                    <h2 style="font-size: 22px; color: #f39c12; margin: 25px 0 15px 0;">💀 ТЫ ЖИВЕШЬ ЖИЗНЬ СВОИХ ПРОГРАММ</h2>

                    <h3 style="color: white; margin: 20px 0 15px 0; font-size: 18px;">Вот что РЕАЛЬНО происходит каждый день:</h3>

                    <p style="margin-bottom: 12px; font-size: 14px; line-height: 1.4;"><strong>УТРОМ</strong> ты встаешь и первая мысль: <em>"Опять этот день... Как же я устал..."</em><br>→ <span style="color: #f39c12;">Это программа "Жизнь - тяжелая штука"</span></p>

                    <p style="margin-bottom: 12px; font-size: 14px; line-height: 1.4;"><strong>В ОТНОШЕНИЯХ</strong> ты снова молчишь, когда хочется сказать правду, соглашаешься, когда душа кричит "НЕТ!"<br>→ <span style="color: #f39c12;">Это программа "Меня не будут любить, если я буду собой"</span></p>

                    <p style="margin-bottom: 12px; font-size: 14px; line-height: 1.4;"><strong>НА РАБОТЕ</strong> ты делаешь то, что ненавидишь, ради денег, которых всё равно не хватает<br>→ <span style="color: #f39c12;">Это программа "Я недостоин большего"</span></p>

                    <p style="margin-bottom: 12px; font-size: 14px; line-height: 1.4;"><strong>В СЕМЬЕ</strong> ты чувствуешь себя виноватым за каждое свое желание<br>→ <span style="color: #f39c12;">Это программа "Мои потребности не важны"</span></p>

                    <p style="margin-bottom: 20px; font-size: 14px; line-height: 1.4;"><strong>ПЕРЕД СНОМ</strong> ты прокручиваешь в голове все свои косяки и думаешь: "Когда же это закончится?"<br>→ <span style="color: #f39c12;">Это программа "Я не контролирую свою жизнь"</span></p>

                    <h2 style="font-size: 22px; color: #f39c12; margin: 25px 0 15px 0;">😱 А ТЕПЕРЬ СТРАШНАЯ ПРАВДА...</h2>

                    <h3 style="color: white; margin: 20px 0 15px 0; font-size: 18px;">Эти программы НЕ ТВОИ!</h3>

                    <p style="font-size: 15px; margin-bottom: 15px; line-height: 1.5;">Они достались тебе от:</p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- <strong>Родителей</strong>, которые сами жили в страхе</p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- <strong>Общества</strong>, которое хочет послушных потребителей</p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- <strong>Школы</strong>, где учили "не высовываться"</p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- <strong>Религии</strong>, где внушали чувство вины</p>
                    <p style="font-size: 14px; margin-bottom: 20px;">- <strong>СМИ</strong>, которые каждый день кричат об опасностях</p>

                    <p style="font-size: 16px; font-weight: 600; text-align: center; margin-bottom: 20px; color: #e74c3c;">И ты поверил, что это ТЫ.</p>

                    <p style="font-size: 15px; margin-bottom: 20px; line-height: 1.5;">Но это не ты. Это чужие голоса в твоей голове.</p>

                    <h2 style="font-size: 22px; color: #f39c12; margin: 25px 0 15px 0;">🔥 ВОПРОС НА МИЛЛИОН:</h2>

                    <h3 style="color: white; margin: 20px 0 15px 0; font-size: 18px;">Сколько ещё лет ты будешь жить чужую жизнь?</h3>

                    <p style="font-size: 14px; margin-bottom: 10px;"><strong>5 лет?</strong> К тому времени ты окончательно забудешь, кто ты на самом деле.</p>
                    <p style="font-size: 14px; margin-bottom: 10px;"><strong>10 лет?</strong> Твои мечты превратятся в пыль, а сердце станет каменным.</p>
                    <p style="font-size: 14px; margin-bottom: 10px;"><strong>20 лет?</strong> Ты будешь смотреть на молодых и думать: "Вот бы мне их энергию..."</p>
                    <p style="font-size: 14px; margin-bottom: 20px; color: #e74c3c; font-weight: 600;"><strong>ДО СМЕРТИ?</strong> Тогда на смертном одре ты поймешь: "Я так и не пожил СВОЕЙ жизнью..."</p>

                    <h2 style="font-size: 22px; color: #f39c12; margin: 25px 0 15px 0;">💔 БОЛЬШЕ ВСЕГО УБИВАЕТ ТО, ЧТО...</h2>

                    <h3 style="color: white; margin: 20px 0 15px 0; font-size: 18px;">Ты ЗНАЕШЬ, что живешь не так</h3>

                    <p style="font-size: 15px; margin-bottom: 15px; line-height: 1.5;">Каждый день ты чувствуешь этот внутренний голос, который шепчет:</p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- "Ты можешь больше..."</p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- "Ты достоин лучшего..."</p>
                    <p style="font-size: 14px; margin-bottom: 20px;">- "Это не твоя жизнь..."</p>

                    <p style="font-size: 16px; font-weight: 600; margin-bottom: 15px; color: #f39c12;">Но что ты делаешь?</p>

                    <p style="font-size: 15px; margin-bottom: 20px; line-height: 1.5;">Заглушаешь его работой, сериалами, алкоголем, едой, бесконечной прокруткой соцсетей.</p>

                    <p style="font-size: 15px; margin-bottom: 20px; line-height: 1.5;">Потому что <strong>СТРАШНО</strong> признать правду:</p>

                    <p style="font-size: 18px; font-weight: 600; font-style: italic; text-align: center; margin-bottom: 25px; color: #e74c3c; border-left: 4px solid #e74c3c; padding: 15px;">Ты сам себе тюремщик. Ты сам построил клетку из чужих правил и теперь живешь в ней.</p>

                    <h2 style="font-size: 22px; color: #f39c12; margin: 25px 0 15px 0;">🚨 А ВРЕМЯ ИДЁТ...</h2>

                    <h3 style="color: white; margin: 20px 0 15px 0; font-size: 18px;">И вот что происходит, пока ты медлишь:</h3>

                    <p style="font-size: 14px; margin-bottom: 10px;"><strong>ЧЕРЕЗ ГОД</strong> ты будешь в той же точке, только старше и более уставший</p>
                    <p style="font-size: 14px; margin-bottom: 10px;"><strong>ЧЕРЕЗ 3 ГОДА</strong> начнешь говорить: "Наверное, это моя судьба..."</p>
                    <p style="font-size: 14px; margin-bottom: 10px;"><strong>ЧЕРЕЗ 5 ЛЕТ</strong> смиришься и скажешь: "А что я могу изменить в моем возрасте?"</p>
                    <p style="font-size: 14px; margin-bottom: 20px; color: #e74c3c; font-weight: 600;"><strong>ЧЕРЕЗ 10 ЛЕТ</strong> будешь завидовать тем, кто живет той жизнью, о которой ты только мечтал</p>

                    <h2 style="font-size: 22px; color: #f39c12; margin: 25px 0 15px 0;">😭 САМОЕ БОЛЕЗНЕННОЕ...</h2>

                    <h3 style="color: white; margin: 20px 0 15px 0; font-size: 18px;">Ты видишь других людей, которые ЖИВУТ</h3>

                    <p style="font-size: 14px; margin-bottom: 10px;">- Они говорят то, что думают - <strong>а ты молчишь</strong></p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- Они занимаются любимым делом - <strong>а ты ходишь на ненавистную работу</strong></p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- Они путешествуют и наслаждаются - <strong>а у тебя "нет денег"</strong></p>
                    <p style="font-size: 14px; margin-bottom: 10px;">- Они любят и любимы - <strong>а ты боишься быть отвергнутым</strong></p>
                    <p style="font-size: 14px; margin-bottom: 20px;">- Они счастливы просто так - <strong>а тебе нужны причины для радости</strong></p>

                    <p style="font-size: 16px; font-weight: 600; text-align: center; margin-bottom: 15px; color: #f39c12;">И ты думаешь: "Почему им можно, а мне нельзя?"</p>

                    <p style="font-size: 20px; font-weight: 700; text-align: center; margin-bottom: 25px; color: white;">МОЖНО! И тебе можно!</p>

                    <p style="font-size: 15px; margin-bottom: 20px; line-height: 1.5;">Просто ты не знаешь КАК выбраться из матрицы программ.</p>

